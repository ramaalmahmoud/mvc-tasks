@model IEnumerable<_19_9_2024.Models.Classes>

@{
    ViewBag.Title = "Classes";
}

<section class="vh-100" style="background-color: #508bfc;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-10">
                <div class="text-center mb-5">
                    <h3 class="mb-5 text-white">Classes</h3>
                    <a href="@Url.Action("Create", "Classes")" class="btn btn-primary mb-3">Create Class</a>

                </div>

                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-md-6 mb-4">
                            <div class="card shadow-2-strong" style="border-radius: 1rem; background-image: url('data:image/jpeg;base64,'); background-size: cover; color: black ">
                                <div class="card-body p-4">
                                    <a href="@Url.Action("Delete", "Classes", new { id = item.ID })" data-toggle="modal" data-target="#deleteModal" class="btn btn-light">Delete</a>
                                    <h5 class="card-title">@item.Name</h5>
                                    <p class="card-text">Grade: @item.Grade</p>
                                    <a href="@Url.Action("Details", "Classes", new { id = item.ID })" class="btn btn-light btn-block">View Students</a>
                                    <a href="@Url.Action("Tasks", "Classes", new { id = item.ID })" class="btn btn-light btn-block">View Tasks</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <!-- Delete Confirmation Modal -->
    <div id="deleteModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Confirm Delete</h4>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this class?</p>
                    <dl class="dl-horizontal">
                        <dt>@Html.DisplayNameFor(model => model.Name)</dt>
                       

                        <dt>@Html.DisplayNameFor(model => model.Grade)</dt>
                    </dl>
                </div>
                <div class="modal-footer">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">Yes, Delete</button>
                    }
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    body {
        background-color: #f1f3f6;
        font-family: 'Arial', sans-serif;
    }

    h3 {
        color: #fff;
    }

    .card {
        transition: transform 0.3s, box-shadow 0.3s;
        border: none;
    }

    .card:hover {
        transform: scale(1.05);
        box-shadow: 0 12px 20px rgba(0, 0, 0, 0.2);
    }

    .btn-block {
        background-color: #ffffff;
        color: #343a40;
        border: none;
        font-weight: 600;
        padding: 10px;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

    .btn-block:hover {
        background-color: #f8f9fa;
        color: #007bff;
    }

    /* Responsive adjustments for smaller screens */
    media (max-width: 768px) {
        .col-md-6 {
            flex: 0 0 100%;
            max-width: 100%;
        }
    }
</style>
