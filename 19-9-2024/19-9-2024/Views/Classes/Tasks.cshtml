@model IEnumerable<_19_9_2024.Models.Task>

@{
    ViewBag.Title = "Tasks";
    var classId = Model.FirstOrDefault()?.classId;
}

<h2 class="text-center mt-4">@ViewBag.Title</h2>

<div class="text-right mb-3">
    <a href="@Url.Action("Create", "Tasks", new { classId = classId })" class="btn btn-primary">
        <i class="fa fa-plus"></i> Create New
    </a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover table-bordered">
        <thead class="thead-dark">
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Classes.Name)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Duedate)
                </th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Classes.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Duedate)
                    </td>
                    <td class="text-center">
                        <a href="@Url.Action("Edit","Tasks", new { id = item.Id ,classId = classId})" class="btn btn-warning btn-sm">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a href="@Url.Action("Details","Tasks", new { id = item.Id })" class="btn btn-info btn-sm">
                            <i class="fa fa-info-circle"></i>
                        </a>
                        <a href="@Url.Action("Delete","Tasks", new { id = item.Id })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this task?');">
                            <i class="fa fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
