@model IEnumerable<_19_9_2024.Models.Course>

@{
    ViewBag.Title = "Courses";
}

<section class="vh-100" style="background-color: #508bfc;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12">
                <div class="text-center mb-5">
                    <h2>Courses</h2>
                    <p>
                        @Html.ActionLink("Create New Course", "Create", null, new { @class = "btn btn-light" })
                    </p>
                </div>

                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-md-4 mb-4">
                            <div class="card shadow-2-strong" style="border-radius: 1rem; background-image: url('data:image/jpeg;base64,'); background-size: cover; color: #fff;">
                                <div class="card-body" style="background-color: rgba(0, 0, 0, 0.5); border-radius: 1rem;">
                                    <h5 class="card-title">@item.Name</h5>
                                    <p class="card-text">@item.Description</p>

                                    <div class="d-flex justify-content-between">
                                        <a href="@Url.Action("Edit", "Courses", new { id = item.Id })" class="btn btn-light">Edit</a>
                                        <a href="@Url.Action("Details", "Courses", new { id = item.Id })" class="btn btn-light">Details</a>
                                        <a href="@Url.Action("Delete", "Courses", new { id = item.Id })" class="btn btn-light">Delete</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    body {
        background-color: #f1f3f6;
        font-family: 'Arial', sans-serif;
    }

    h2 {
        color: #fff;
    }

    .card {
        transition: transform 0.3s, box-shadow 0.3s;
        border: none;
        height: 300px; /* Adjust height for background image */
        position: relative;
    }

    .card:hover {
        transform: scale(1.05);
        box-shadow: 0 12px 20px rgba(0, 0, 0, 0.2);
    }

    .btn-light {
        color: #343a40;
        border: none;
        font-weight: 600;
        padding: 10px;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

    .btn-light:hover {
        background-color: #f8f9fa;
        color: #007bff;
    }

    .card-body {
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    /* Responsive adjustments for smaller screens */
    media (max-width: 768px) {
        .col-md-4 {
            margin-bottom: 20px;
        }
    }
</style>
