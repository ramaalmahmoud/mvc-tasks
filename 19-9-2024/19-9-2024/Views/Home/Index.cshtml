@{
    ViewBag.Title = "Home Page";
}

<main>
    <section class="vh-100" style="background-color: #508bfc;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card shadow-2-strong" style="border-radius: 1rem;">
                        <div class="card-body text-center p-5">
                            <h3 class="mb-5">School System</h3>

                            <!-- Courses Card -->
                            <div class="card mb-4 shadow-2-strong" style="border-radius: 1rem; background-image: url('data:image/jpeg;base64,'); background-size: cover; background-position: center;">
                                <div class="card-body p-4 text-white" style="background-color: rgba(0, 0, 0, 0.6);">
                                    <h5 class="card-title">Courses</h5>
                                    <p class="card-text">Explore and manage school courses. Add, edit, or delete subjects.</p>
                                    <a href="@Url.Action("Index", "Courses")" class="btn btn-light btn-block">Go to Courses</a>
                                </div>
                            </div>

                            <!-- Classes Card -->
                            <div class="card mb-4 shadow-2-strong" style="border-radius: 1rem; background-image: url('data:image/jpeg;base64,'); background-size: cover; background-position: center;">
                                <div class="card-body p-4 text-white" style="background-color: rgba(0, 0, 0, 0.6);">
                                    <h5 class="card-title">Classes</h5>
                                    <p class="card-text">Manage classes, students, and tasks. Keep track of everything in the system.</p>
                                    <a href="@Url.Action("Index", "Classes")" class="btn btn-light btn-block">Go to Classes</a>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<style>
    body {
        background-color: #f1f3f6;
        font-family: 'Arial', sans-serif;
    }

    h3 {
        color: #333;
    }

    .card {
        transition: transform 0.3s, box-shadow 0.3s;
        border: none;
    }

    .card:hover {
        transform: scale(1.05);
        box-shadow: 0 12px 20px rgba(0, 0, 0, 0.2);
    }

    .btn-block {
        background-color: #ffffff;
        color: #343a40;
        border: none;
        font-weight: 600;
        padding: 10px;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

    .btn-block:hover {
        background-color: #f8f9fa;
        color: #007bff;
    }

    .card-body {
        border-radius: 1rem;
        padding: 20px;
    }

    .text-white {
        color: #fff !important;
    }

    /* Responsive adjustments for smaller screens */
    media (max-width: 768px) {
        .col-md-8 {
            margin-bottom: 20px;
        }
    }
</style>
